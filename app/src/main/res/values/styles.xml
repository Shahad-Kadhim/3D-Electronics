<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ProductImageShape" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
    </style>

    <style name="ProductImageRounded" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerSizeBottomLeft">24dp</item>
        <item name="cornerSizeBottomRight">24dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
    </style>

    <style name="ProductImagesShape" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerSize">4dp</item>
    </style>

    <style name="companies" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="video" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ProductBackgroundCardStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">@dimen/margin3x</item>
        <item name="cardBackgroundColor">@color/secondary_background_color</item>
    </style>

    <style name="ProductBackgroundCardStyle.MatchParentWidth">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ProductNameStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">@dimen/text_normal2x</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:layout_marginStart">@dimen/margin2x</item>
    </style>

    <style name="ProductNameStyle2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ProductPriceStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">@dimen/text18sp</item>
        <item name="android:fontFamily">@font/monda_bold</item>
    </style>

    <style name="ProductPriceStyle2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">@dimen/text18sp</item>
        <item name="android:fontFamily">@font/monda_bold</item>
        <item name="android:layout_marginStart">@dimen/margin4dp</item>
        <item name="android:layout_marginBottom">@dimen/margin8dp</item>
    </style>

    <style name="ProductImageStyle">
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_width">180dp</item>
    </style>

    <style name="ProductImageStyle2">
        <item name="android:layout_height">170dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ProductImageStyle.Fixed">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">200dp</item>
    </style>

    <style name="WishIconStyle">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:button">@drawable/ic_favorite</item>
        <item name="android:layout_marginTop">@dimen/margin2dp</item>
    </style>

    <style name="WishButtonStyle">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_margin">@dimen/margin2x</item>
        <item name="android:alpha">0.7</item>
        <item name="android:background">@drawable/wish_button_shape</item>
    </style>

    <style name="SearchBarStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:hint">@string/search</item>
        <item name="android:textColorHint">@color/secondary_text_color</item>
        <item name="android:drawableLeft">@drawable/ic_search_bar</item>
        <item name="android:drawablePadding">@dimen/padding1x</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/text14sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="AboutBackgroundCard">
        <item name="android:background">@drawable/about_card</item>
    </style>

    <style name="AboutTitleTextColor">
        <item name="android:textColor">@color/primary_text_color</item>
    </style>
    <style name="AboutTextColor">
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>
    <style name="AboutBackgroundCompanies">
        <item name="android:background">@drawable/company_bg</item>
    </style>

    <style name="MainProductImageShape" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerSize">10%</item>
    </style>

    <style name="contactText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text14sp</item>
        <item name="android:drawablePadding">@dimen/padding1x</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/margin3x</item>
    </style>
    <style name="TitleText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">280dp</item>
        <item name="android:textColor">@color/seconder_text_color</item>
        <item name="android:textSize">@dimen/text24sp</item>
        <item name="fontFamily">@font/monda_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
</resources>