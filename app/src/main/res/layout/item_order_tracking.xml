<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.lemon.team.electronics.model.orderTracking.OrderTrackingResponse" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/wish_product_background_card"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        app:cardCornerRadius="@dimen/margin4x"
        android:layout_marginVertical="@dimen/margin_small"
        android:layout_marginHorizontal="@dimen/margin2x"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <TextView
                android:id="@+id/customer_name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin4x"
                android:fontFamily="@font/monda_regular"
                android:text="@{` Hello,`+ item.name}"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_default"
                app:layout_constraintBottom_toTopOf="@+id/order_state"
                app:layout_constraintStart_toEndOf="@+id/product_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="Hello, Karrar" />

            <TextView
                android:id="@+id/order_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/monda_bold"
                android:text="@{` Your Order Is ,`+ item.orderState}"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/customer_name"
                app:layout_constraintTop_toBottomOf="@+id/customer_name"
                tools:text="Your Order Is Received" />


            <TextView
                android:id="@+id/order_date"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/monda_regular"
                android:text="@{` Order Day :`+ item.createdAt}"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_default"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/customer_name"
                app:layout_constraintTop_toBottomOf="@+id/order_state"
                tools:text="Your Order Is Received" />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/product_image"
                android:layout_width="124dp"
                android:layout_height="0dp"
                android:src="@drawable/trakingimage"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@color/secondary_icons_color" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>