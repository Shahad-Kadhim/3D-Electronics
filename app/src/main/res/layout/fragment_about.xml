<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.lemon.team.electronics.ui.about.AboutViewModel" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/margin2x"
            android:layout_marginTop="16dp"
            android:onClick="@{() -> viewModel.onclickBack()}"
            android:background="@drawable/ic_shape_cover"
            android:drawableStart="@drawable/ic_baseline_arrow_back"
            android:drawableTint="@color/secondary_icons_color"
            android:elevation="2dp"
            android:gravity="center"
            android:paddingStart="@dimen/padding6dp"
            android:paddingEnd="@dimen/padding6dp"
            android:paddingTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <VideoView
            android:id="@+id/video"
            android:layout_width="312dp"
            android:layout_height="176dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back_button"
            app:playVideo="@{viewModel.video}" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/companies_recycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal"
            app:items="@{viewModel.companies}"

            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_horizontal_vendors" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/other_companies_recycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="128dp"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal"
            app:items="@{viewModel.otherCompanies}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/companies_recycler"
            tools:listitem="@layout/item_horizontal_vendors" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>