<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.lemon.team.electronics.model.response.productsByCategoryId.Content" />
        <variable
            name="listener"
            type="com.lemon.team.electronics.ui.wishList.WishListInteractionListener" />
    </data>

        <androidx.cardview.widget.CardView
            android:id="@+id/wish_product_background_card"
            style="@style/ProductBackgroundCardStyle"
            android:layout_margin="8dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:onClick="@{() -> listener.onClickProduct(item.id)}">

                <TextView
                    android:id="@+id/product_name_text"
                    style="@style/ProductNameStyle"
                    android:maxLines="1"
                    android:text="@{item.name}"
                    app:layout_constraintBottom_toTopOf="@id/product_price_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_image"
                    tools:text="Official Original Silicone..." />

                <TextView
                    android:id="@+id/product_price_text"
                    style="@style/ProductPriceStyle"
                    android:text="@{String.valueOf(item.price)}"
                    app:layout_constraintBottom_toTopOf="@id/product_name_text"
                    app:layout_constraintStart_toStartOf="@id/product_name_text"
                    app:layout_constraintTop_toBottomOf="@id/product_name_text"
                    tools:text="15.77 IQ" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/product_image"
                    style="@style/ProductImageStyle"
                    app:urlForImage="@{item.imageJsonResponses.get(0).productImageLocation}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@color/brand_color" />

                <CheckBox
                    android:id="@+id/check_wished_product_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checked="true"
                    android:button="@drawable/wish_checkbox"
                    android:layout_margin="@dimen/margin12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/add_to_cart_button"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@color/secondary_icons_color"
                    android:onClick="@{() -> listener.onClickAddToCart()}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/product_name_text" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
</layout>