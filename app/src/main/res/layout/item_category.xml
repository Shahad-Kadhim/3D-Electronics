<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="item"
            type="com.lemon.team.electronics.model.response.categories.CategoriesResponseItem" />

        <variable
            name="listener"
            type="com.lemon.team.electronics.ui.CategoryInteractionListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:onClick="@{() -> listener.onClickCategory(item)}"
        android:backgroundTint="@color/teal_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:text="@{item.categoryName}"
            android:textSize="32sp"
            android:textStyle="bold"
            />

    </androidx.cardview.widget.CardView>

</layout>