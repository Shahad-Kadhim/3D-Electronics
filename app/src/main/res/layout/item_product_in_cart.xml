<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.lemon.team.electronics.model.response.Product" />
        <variable
            name="listener"
            type="com.lemon.team.electronics.ui.cart.CartInteractionListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/wish_product_background_card"
        style="@style/ProductBackgroundCardStyle.MatchParentWidth"
        android:layout_marginVertical="@dimen/margin8dp"
        android:layout_marginHorizontal="@dimen/margin2x">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="@{() -> listener.onClickProduct(item.id)}">

            <TextView
                android:id="@+id/product_name_text"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin3x"
                android:layout_marginStart="@dimen/margin2x"
                android:ellipsize="end"
                android:fontFamily="@font/monda_regular"
                android:maxLines="2"
                android:text="@{item.name}"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text14sp"
                app:layout_constraintStart_toEndOf="@id/product_image"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="MIMD HSY-013 Wireless Controller for Nintendo Switch" />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 piece"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/seconder_text_color"
                android:textSize="14sp"
                android:layout_marginTop="@dimen/margin2x"
                app:layout_constraintStart_toStartOf="@+id/product_name_text"
                app:layout_constraintTop_toBottomOf="@+id/product_name_text" />
            <TextView
                android:id="@+id/product_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin8dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@{String.valueOf(item.price)+` $`}"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/text18sp"
                android:textStyle="bold"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/product_name_text"
                app:layout_constraintTop_toBottomOf="@+id/quantity"
                tools:text="15.77 $" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/product_image"
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:imageFromUrl="@{String.valueOf(item.mainImage)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@color/secondary_icons_color" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>