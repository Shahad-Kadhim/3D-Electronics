<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/back_button"
            style="@style/ButtonBack"
            android:background="@drawable/button_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin2x"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@+id/back_button">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/padding2x">

                <TextView
                    android:id="@+id/order_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin2x"
                    android:text="@string/order_summary"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/text_normal2x"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/item_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/text_normal2x"
                    app:layout_constraintBaseline_toBaselineOf="@+id/order_summary"
                    app:layout_constraintStart_toEndOf="@+id/order_summary"
                    tools:text="(3 items)" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/checkout_recycler"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_margin="@dimen/margin2x"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/order_summary"
                    tools:listitem="@layout/item_checkout" />

                <View
                    android:id="@+id/break_line"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/margin3x"
                    android:layout_marginVertical="@dimen/margin2x"
                    android:background="@color/brand_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/checkout_recycler" />

                <TextView
                    android:id="@+id/sub_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin2x"
                    android:text="@string/subtotal"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="@dimen/text_normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/break_line" />

                <TextView
                    android:id="@+id/sub_total_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin2x"
                    android:text="94.54 IQ"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="@dimen/text_normal"
                    app:layout_constraintBaseline_toBaselineOf="@+id/sub_total"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/delivery_fees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin2x"
                    android:text="@string/delivery_fees"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="@dimen/text_normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sub_total" />

                <TextView
                    android:id="@+id/delivery_fees_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin2x"
                    android:text="10.00 IQ"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="@dimen/text_normal"
                    app:layout_constraintBaseline_toBaselineOf="@+id/delivery_fees"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/secondary_break_line"
                    android:layout_width="240dp"
                    android:layout_height="1dp"
                    android:layout_marginVertical="@dimen/margin2x"
                    android:background="@color/tertiary_brand_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/delivery_fees" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin2x"
                    android:text="@string/total"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="@dimen/text_normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/secondary_break_line" />

                <TextView
                    android:id="@+id/total_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin2x"
                    android:text="100.54 IQ"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"
                    app:layout_constraintBaseline_toBaselineOf="@+id/total"
                    app:layout_constraintEnd_toEndOf="parent" />

                <Button
                    android:id="@+id/pay_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin3x"
                    android:layout_marginEnd="@dimen/margin2x"
                    android:text="@string/pay_now"
                    android:textAllCaps="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/total_number" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>